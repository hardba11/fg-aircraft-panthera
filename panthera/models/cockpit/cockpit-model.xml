<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

  <path>cockpit.ac</path>

<!--

alt needle : x=0 y=0.101493 z=0.165175
alt knob : x=0 y=0.064831 z=0.128742
middle levers : x=-1.7845 y=0 z=-0.4
gear + flaps lever : x=-2.1371 y=0 z=-0.164448
magneto : x=0 y=-0.501767 z=-0.087571
trim : x=-1.6666 y=0.01897 z=0
fuel : x=-1.5937 y=-0.015762 z=0
bottom switch : x=-2.1244 y=0 z=-0.16045
helice : x=-4.2528 y=0 z=-0.179864
switch master : x=-2.1348 y=0 z=-0.044256
magcompass : x=-2.0852 y=0 z=0.27545

-->

  <animation>
    <type>material</type>
    <object-name>bottom.boxes</object-name>
    <object-name>bottom.buttons</object-name>
    <object-name>bottom.lever.flaps</object-name>
    <object-name>bottom.lever.gear</object-name>
    <object-name>bottom.switches</object-name>
    <object-name>cabin</object-name>
    <object-name>equipement</object-name>
    <object-name>front.boxes</object-name>
    <object-name>front.panel</object-name>
    <object-name>front.panel_top</object-name>
    <object-name>front.warning_light</object-name>
    <object-name>instrument.ai.box</object-name>
    <object-name>instrument.ai.tape</object-name>
    <object-name>instrument.alt.box</object-name>
    <object-name>instrument.alt.knob</object-name>
    <object-name>instrument.alt.needle100</object-name>
    <object-name>instrument.alt.needle1000</object-name>
    <object-name>instrument.asi.box</object-name>
    <object-name>instrument.asi.needle</object-name>
    <object-name>instrument.magcompass.box</object-name>
    <object-name>instrument.magcompass.mark</object-name>
    <object-name>instrument.magcompass.ring</object-name>
    <object-name>middle.knob.fuel_selector</object-name>
    <object-name>middle.knob.trim</object-name>
    <object-name>middle.lever.mix</object-name>
    <object-name>middle.lever.propeller</object-name>
    <object-name>middle.lever.throttle</object-name>
    <object-name>middle.panel</object-name>
    <object-name>seats</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ AIR SPEED INDICATOR -->
  <animation>
    <type>rotate</type>
    <object-name>instrument.asi.needle</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>60</ind><dep>45</dep></entry>
      <entry><ind>80</ind><dep>76</dep></entry>
      <entry><ind>100</ind><dep>110</dep></entry>
      <entry><ind>120</ind><dep>144</dep></entry>
      <entry><ind>140</ind><dep>178</dep></entry>
      <entry><ind>160</ind><dep>210</dep></entry>
      <entry><ind>180</ind><dep>241</dep></entry>
      <entry><ind>200</ind><dep>272</dep></entry>
      <entry><ind>220</ind><dep>302</dep></entry>
      <entry><ind>240</ind><dep>330</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>-0.100</y-m>
      <z-m>0.1652</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ ATTITUDE INDICATOR -->

  <animation>
    <type>texmultiple</type>
    <object-name>instrument.ai.tape</object-name>
    <transform>
      <subtype>textranslate</subtype>
      <property>orientation/pitch-deg</property>
      <interpolation>
        <entry><ind>-90.0</ind><dep>-0.21</dep></entry>
        <entry><ind>0.0</ind><dep>0.0</dep></entry>
        <entry><ind>90.0</ind><dep>0.21</dep></entry>
      </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
      </axis>
    </transform>
    <transform>
      <subtype>texrotate</subtype>
      <property>orientation/roll-deg</property>
      <axis>
        <x>0</x>
        <y>0</y>
        <z>-1</z>
      </axis>
      <center>
        <x>0.92</x>
        <y>0.61</y>
      </center>
    </transform>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ ALTIMETER -->
  <animation>
    <type>rotate</type>
    <object-name>instrument.alt.needle100</object-name>
    <property>instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.36</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0.101493</y-m>
      <z-m>0.165175</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>instrument.alt.needle1000</object-name>
    <property>instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.036</factor>
    <center>
      <x-m>-2.0848</x-m>
      <y-m>0.101493</y-m>
      <z-m>0.165175</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ MAGCOMPASS -->
  <animation>
    <type>rotate</type>
    <object-name>instrument.magcompass.ring</object-name>
    <property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
    <center>
      <x-m>-2.0852</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>


  <!-- ~~~~~~~~~~~~~~~~~~ THROTTLE -->
  <animation>
    <type>rotate</type>
    <object-name>middle.lever.throttle</object-name>
    <property>controls/engines/engine/throttle</property>
    <interpolation>
      <entry><ind>0</ind><dep>40</dep></entry>
      <entry><ind>1</ind><dep>-40</dep></entry>
    </interpolation>
    <center>
      <x-m>-1.7845</x-m>
      <y-m>0</y-m>
      <z-m>-.4</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ PROPELLER -->
  <animation>
    <type>rotate</type>
    <object-name>middle.lever.propeller</object-name>
    <property>controls/engines/engine/propeller-pitch</property>
    <interpolation>
      <entry><ind>0</ind><dep>40</dep></entry>
      <entry><ind>1</ind><dep>-40</dep></entry>
    </interpolation>
    <center>
      <x-m>-1.7845</x-m>
      <y-m>0</y-m>
      <z-m>-.4</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ MIXTURE -->
  <animation>
    <type>rotate</type>
    <object-name>middle.lever.mix</object-name>
    <property>controls/engines/engine/mixture</property>
    <interpolation>
      <entry><ind>0</ind><dep>40</dep></entry>
      <entry><ind>1</ind><dep>-40</dep></entry>
    </interpolation>
    <center>
      <x-m>-1.7845</x-m>
      <y-m>0</y-m>
      <z-m>-.4</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ GEARS -->
  <animation>
    <type>rotate</type>
    <object-name>bottom.lever.gear</object-name>
    <property>controls/gear/gear-down</property>
    <interpolation>
      <entry><ind>0</ind><dep>-35</dep></entry>
      <entry><ind>1</ind><dep>35</dep></entry>
    </interpolation>
    <center>
      <x-m>-2.1371</x-m>
      <y-m>0</y-m>
      <z-m>-0.164448</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ FLAPS -->
  <animation>
    <type>rotate</type>
    <object-name>bottom.lever.flaps</object-name>
    <property>controls/flight/flaps</property>
    <interpolation>
      <entry><ind>0</ind><dep>-60</dep></entry>
      <entry><ind>1</ind><dep>0</dep></entry>
    </interpolation>
    <center>
      <x-m>-2.1371</x-m>
      <y-m>0</y-m>
      <z-m>-0.164448</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>


