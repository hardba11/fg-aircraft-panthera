<?xml version="1.0" encoding="utf-8"?>
<!--
################################################################################
#
#                               HUD CONFIGURATION
#
################################################################################

see :
- http://wiki.flightgear.org/Head-up_display
- http://wiki.flightgear.org/Canvas_HUD
-->

<PropertyList>

  <enable3d>true</enable3d>
  <!--
================================================================================
                                                                          LADDER
================================================================================
-->
  <ladder>
    <name>Pitch Ladder</name>
    <type>pitch</type>
    <x>-25</x>
    <y>-25</y>
    <width>50</width>
    <height>45</height>
    <roll-input>
      <property>/orientation/roll-deg</property>
    </roll-input>
    <pitch-input>
      <property>/orientation/pitch-deg</property>
    </pitch-input>
    <compression-factor>10</compression-factor>
    <display-span>18</display-span>
    <divisions>2</divisions>
    <screen-hole>6</screen-hole>
    <tick-length>1</tick-length>
    <zero-bar-overlength>30</zero-bar-overlength>
    <enable-dive-bar-angle>true</enable-dive-bar-angle>
    <enable-dynamic-origin>false</enable-dynamic-origin>
    <enable-fuselage-ref-line>true</enable-fuselage-ref-line>
    <enable-target-spot>false</enable-target-spot>
    <enable-target-markers>true</enable-target-markers>
    <enable-velocity-vector>true</enable-velocity-vector>
    <enable-drift-marker>false</enable-drift-marker>
    <enable-alpha-bracket>false</enable-alpha-bracket>
    <enable-energy-marker>true</enable-energy-marker>
    <enable-climb-dive-marker>false</enable-climb-dive-marker>
    <enable-glide-slope-marker>true</enable-glide-slope-marker>
    <glide-slope>0.0</glide-slope>
    <enable-energy-worm>false</enable-energy-worm>
    <enable-waypoint-marker>true</enable-waypoint-marker>
    <enable-zenith>false</enable-zenith>
    <enable-nadir>false</enable-nadir>
  </ladder>


  <!--
================================================================================
                                                             TURN BANK INDICATOR
================================================================================
-->
  <turn-bank-indicator>
    <name>Turn Indicator</name>
    <x>-80</x>
    <y>-50</y>
    <width>160</width>
    <height>50</height>
    <bank-input>
      <property>/orientation/roll-deg</property>
    </bank-input>
    <sideslip-input>
      <property>/orientation/side-slip-deg</property>
    </sideslip-input>
    <bank-scale>true</bank-scale>
    <option>top</option>
  </turn-bank-indicator>

  <!--
================================================================================
                                                                         HEADING
================================================================================
-->
  <label>
    <name>Heading Label top</name>
    <x>-9</x>
    <y>80</y>
    <width>18</width>
    <height>10</height>
    <input>
      <property>/orientation/heading-magnetic-deg</property>
    </input>
    <format>%3.0f</format>
    <halign>center</halign>
    <box>true</box>
  </label>

  <!--
================================================================================
                                                                           SPEED
================================================================================
-->
  <!-- ~~~~~~~~~~~~~~~~~~ airspeed -->
  <label>
    <name>KIAS</name>
    <x>-139</x>
    <y>-26</y>
    <width>38</width>
    <height>10</height>
    <input>
      <property>/instrumentation/airspeed-indicator/true-speed-kt</property>
    </input>
    <format>%4.0fkt</format>
    <halign>right</halign>
    <box>true</box>
  </label>

  <!--
================================================================================
                                                                        ALTITUDE
================================================================================
-->
  <label>
    <name>Altitude</name>
    <x>109</x>
    <y>-26</y>
    <width>36</width>
    <height>10</height>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <format>%6.0fft</format>
    <halign>right</halign>
    <box>true</box>
  </label>
  <label>
    <name>flight level</name>
    <x>109</x>
    <y>-8</y>
    <width>36</width>
    <height>8</height>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      <factor>0.01</factor>
    </input>
    <format>FL %3.0f</format>
    <halign>right</halign>
    <box>false</box>
  </label>

  <label>
    <name>elevationOk</name>
    <x>0</x>
    <y>-120</y>
    <halign>center</halign>
    <format>R %4.0fft</format>
    <input>
      <property>/position/altitude-agl-ft</property>
    </input>
    <condition>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <value>5000</value>
      </less-than>
    </condition>
  </label>

  <label>
    <name>Ralt</name>
    <x>115</x>
    <y>-61</y>
    <width>18</width>
    <height>8</height>
    <input>
      <property>/position/altitude-agl-ft</property>
    </input>
    <format>R %4.0fft</format>
    <halign>left</halign>
    <box>false</box>
    <option>top</option>
    <condition>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <value>5000</value>
      </less-than>
    </condition>
  </label>

  <tape>
    <name>ralt Tape</name>
    <input>
      <property>/position/altitude-agl-ft</property>
      <factor>.1</factor>
    </input>
    <x>110</x>
    <y>-85</y>
    <width>15</width>
    <height>55</height>
    <option>right</option>
    <option>vertical</option>
    <label-gap-width>8</label-gap-width>
    <major-divisions>1</major-divisions>
    <minor-divisions>.2</minor-divisions>
    <display-span>4</display-span>
    <format>%0.0f</format>
    <tick-bottom>false</tick-bottom>
    <tick-top>false</tick-top>
    <tick-right>false</tick-right>
    <tick-left>false</tick-left>
    <cap-bottom>false</cap-bottom>
    <cap-top>false</cap-top>
    <cap-right>false</cap-right>
    <cap-left>true</cap-left>
    <marker-offset>0.0</marker-offset>
    <enable-pointer>true</enable-pointer>
    <pointer-type>fixed</pointer-type>
    <tick-type>line</tick-type>
    <tick-length>variable</tick-length>
    <condition>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <value>5000</value>
      </less-than>
    </condition>
  </tape>

  <!--
================================================================================
                                                                        COMMANDS
================================================================================
-->
  <!-- ~~~~~~~~~~~~~~~~~~ commands positions -->
  <gauge>
    <name>roll gauge</name>
    <x>110</x>
    <y>38</y>
    <width>25</width>
    <height>5</height>
    <option>top</option>
    <option>horizontal</option>
    <option>notext</option>
    <major-divisions>1</major-divisions>
    <minor-divisions>0</minor-divisions>
    <input>
      <property>/controls/flight/aileron</property>
      <max>1.0</max>
      <min>-1.0</min>
    </input>
  </gauge>
  <gauge>
    <name>pitch gauge</name>
    <x>110</x>
    <y>26</y>
    <width>10</width>
    <height>24</height>
    <option>vertical</option>
    <option>right</option>
    <option>notext</option>
    <major-divisions>1</major-divisions>
    <minor-divisions>0</minor-divisions>
    <input>
      <property>/controls/flight/elevator</property>
      <factor>-1</factor>
      <max>1.0</max>
      <min>-1.0</min>
    </input>
  </gauge>

  <label>
    <name>pitch trim value</name>
    <input>
      <property>/controls/flight/elevator-trim</property>
    </input>
    <x>100</x>
    <y>50</y>
    <width>10</width>
    <height>8</height>
    <halign>middle</halign>
    <format>%.3f</format>
  </label>
  <gauge>
    <name>pitch trim gauge</name>
    <x>104</x>
    <y>30</y>
    <width>5</width>
    <height>16</height>
    <option>vertical</option>
    <option>left</option>
    <option>notext</option>
    <major-divisions>1</major-divisions>
    <minor-divisions>0</minor-divisions>
    <input>
      <property>/controls/flight/elevator-trim</property>
      <factor>-2</factor>
      <max>1.0</max>
      <min>-1.0</min>
    </input>
  </gauge>
  <gauge>
    <name>yaw gauge</name>
    <x>110</x>
    <y>35</y>
    <width>25</width>
    <height>3</height>
    <option>horizontal</option>
    <option>bottom</option>
    <option>notext</option>
    <major-divisions>1</major-divisions>
    <minor-divisions>0</minor-divisions>
    <input>
      <property>/controls/flight/rudder</property>
      <max>1.0</max>
      <min>-1.0</min>
    </input>
  </gauge>

  <!-- ~~~~~~~~~~~~~~~~~~ throttles -->
  <gauge>
    <name>throttle0</name>
    <x>-120</x>
    <y>-135</y>
    <width>10</width>
    <height>30</height>
    <option>vertical</option>
    <option>left</option>
    <option>notext</option>
    <major-divisions>90</major-divisions>
    <input>
      <property>/controls/engines/engine[0]/throttle</property>
      <factor>100</factor>
      <max>100.0</max>
      <min>0.0</min>
    </input>
  </gauge>
  <gauge>
    <name>throttle1</name>
    <x>-120</x>
    <y>-135</y>
    <width>10</width>
    <height>30</height>
    <option>vertical</option>
    <option>right</option>
    <option>notext</option>
    <major-divisions>90</major-divisions>
    <input>
      <property>/controls/engines/engine[1]/throttle</property>
      <factor>100</factor>
      <max>100.0</max>
      <min>0.0</min>
    </input>
  </gauge>
  <!--
================================================================================
                                                                  AVIONICS INFOS
================================================================================
-->
  <!-- ~~~~~~~~~~~~~~~~~~ angle of attack -->
  <label>
    <name>AoA</name>
    <input>
      <property>/orientation/alpha-deg</property>
    </input>
    <x>75</x>
    <y>-5</y>
    <width>30</width>
    <height>8</height>
    <halign>right</halign>
    <format>AoA %3.1f</format>
    <condition>
      <or>
        <greater-than>
          <property>/orientation/alpha-deg</property>
          <value>2.2</value>
        </greater-than>
        <less-than>
          <property>/orientation/alpha-deg</property>
          <value>-1.1</value>
        </less-than>
      </or>
    </condition>
  </label>

  <tape>
    <name>aoa gauge</name>
    <x>65</x>
    <y>-65</y>
    <width>10</width>
    <height>60</height>
    <option>right</option>
    <option>vertical</option>
    <label-gap-width>0</label-gap-width>
    <major-divisions>5</major-divisions>
    <minor-divisions>1</minor-divisions>
    <display-span>20</display-span>
    <tick-bottom>false</tick-bottom>
    <tick-top>false</tick-top>
    <tick-right>false</tick-right>
    <tick-left>false</tick-left>
    <cap-bottom>false</cap-bottom>
    <cap-top>false</cap-top>
    <cap-right>false</cap-right>
    <cap-left>false</cap-left>
    <marker-offset>3</marker-offset>
    <enable-pointer>true</enable-pointer>
    <pointer-type>fixed</pointer-type>
    <tick-type>line</tick-type>
    <tick-length>variable</tick-length>
    <input>
      <property>/orientation/alpha-deg</property>
      <factor>1</factor>
      <max>20.0</max>
      <min>-5.0</min>
    </input>
    <condition>
      <or>
        <greater-than>
          <property>/orientation/alpha-deg</property>
          <value>2.0</value>
        </greater-than>
        <and>
          <property>/controls/gear/gear-down</property>
          <greater-than>
            <property>/orientation/alpha-deg</property>
            <value>-1.0</value>
          </greater-than>
        </and>
      </or>
    </condition>
  </tape>

  <!-- ~~~~~~~~~~~~~~~~~~ gears -->
  <label>
    <name>Gear</name>
    <x>-56</x>
    <y>-120</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <property>/controls/gear/gear-down</property>
    </condition>
    <format>gears</format>
    <halign>right</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ parking brake -->
  <label>
    <name>Parking Brake</name>
    <x>-56</x>
    <y>-112</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <property>/controls/gear/brake-parking</property>
    </condition>
    <format>brake</format>
    <halign>right</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ speed brake -->
  <label>
    <name>Speed Brake</name>
    <input>
      <property>/controls/flight/speedbrake</property>
      <factor>10</factor>
    </input>
    <x>-56</x>
    <y>-104</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <greater-than>
        <property>/controls/flight/speedbrake</property>
        <value>0</value>
      </greater-than>
    </condition>
    <format>spdbrk %1.0f</format>
    <halign>right</halign>
  </label>
  <!-- ~~~~~~~~~~~~~~~~~~ flaps -->
  <label>
    <name>Flaps</name>
    <input>
      <property>/controls/flight/flaps</property>
      <factor>10</factor>
    </input>
    <x>-56</x>
    <y>-96</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <greater-than>
        <property>/controls/flight/flaps</property>
        <value>.1</value>
      </greater-than>
    </condition>
    <format>flaps %1.0f</format>
    <halign>right</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ G load -->
  <label>
    <name>G Load</name>
    <x>-120</x>
    <y>-5</y>
    <width>1.5</width>
    <height>1.5</height>
    <input>
      <property>/accelerations/pilot-g</property>
    </input>
    <format>%2.1fg</format>
    <halign>left</halign>
  </label>

  <!--
================================================================================
                                                               AVIONICS WARNINGS
================================================================================
-->

  <!-- ~~~~~~~~~~~~~~~~~~ altitude to low -->
  <label>
    <name>elevationWarn</name>
    <x>0</x>
    <y>-50</y>
    <condition>
      <equals>
        <property>/controls/gear/gear-down</property>
        <value>false</value>
      </equals>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <value>300</value>
      </less-than>
      <less-than>
        <property>/instrumentation/vertical-speed-indicator/indicated-speed-kts</property>
        <value>0</value>
      </less-than>
    </condition>
    <halign>center</halign>
    <format>PULL UP ! %5.0fft</format>
    <input>
      <property>/position/altitude-agl-ft</property>
    </input>
    <blinking>
      <interval>0.25</interval>
    </blinking>
  </label>



</PropertyList>




